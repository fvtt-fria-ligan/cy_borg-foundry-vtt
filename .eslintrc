/**
 *
 * NPM: https://www.npmjs.com/package/@typhonjs-fvtt/eslint-config-foundry.js
 */
{
  "env": {
    "browser": true,
    "es2021": true,
    "jquery": true
  },
  "extends": [
    "eslint:recommended", 
    "plugin:i18n-json/recommended",
    "@typhonjs-fvtt/eslint-config-foundry.js"
  ],
  "globals": {
    "PIXI": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    // TODO: decide if we want no-shadow. Will likely need to omit minified.
    //"no-shadow": ["error", { "builtinGlobals": true, "hoist": "all", "allow": ["event"] }]
    "prefer-const": 2
  }
}
